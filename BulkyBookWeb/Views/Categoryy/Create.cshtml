@model Category

<form method="post">
    <div class="card border-primary p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-secondary"> Create Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">DisplayOrder</label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger">The value is invalid.</span>
        </div>
        <div>
            <button type="submit" class="btn btn-secondary" style="width:100px; margin-right:5px;">Create</button>
            <a asp-controller="Categoryy" asp-action="Index" class="btn btn-primary" style="width:100px">to list</a>
        </div>
        
    </div>
</form>